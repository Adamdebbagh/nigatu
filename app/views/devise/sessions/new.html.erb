<!--
    you can substitue the span of reauth email for a input with the email and
    include the remember me checkbox
    -->
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="card card-container ">
      <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
      <img id="profile-img" class="profile-img-card" src="/assets/wegayehu_AB.jpg" />
      <p id="profile-name" class="profile-name-card"></p>

      <%= form_for(resource, as: resource_name,
                   url: session_path(resource_name), :html => { :class =>'form-signin' } ) do |f| %>
          <span id="reauth-email" class="reauth-email"></span>

          <!--<div class="field">
             <p><%#= f.label :Username %><br />
                <%#= f.text_field :login, autofocus: true , class: 'form-control', required: true %></p>
          </div>-->
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true , class: 'form-control', required: true%>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" , class: "form-control",required: true%>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="field ">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end -%>
          <div>
            <%= f.submit "Log in",class:"actions btn btn-lg btn-primary btn-block btn-signin" %>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div><!-- /card-container -->
  </div>
  <div class="col-md-4"></div>
</div>






