<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="page-header" style="margin-top:5px;">
          <h3>Sign up</h3>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class =>'form-horizontal' } ) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :usename, class:"col-sm-2 control-label" %><br />
              <div class="col-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                  <%= f.email_field :email, autofocus: true,class:"form-control",required: true %>
                </div>
              </div>
            </div>


            <div class="field form-group">
              <%= f.label :email, class:"col-sm-2 control-label" %><br />
              <div class="col-sm-10">
                <div class="input-group">
                  <span class="input-group-addon">@</span>
                  <%= f.email_field :email, autofocus: true,class:"form-control",required: true %>
                </div>
              </div>
            </div>

            <div class=" field form-group">
              <%= f.label :password, class:"col-sm-2 control-label" %>
              <div class="col-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-star"></span></span>
                  <%= f.password_field :password, autocomplete: "off",class:"form-control",required: true %>
                </div>
                <% if @validatable %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
              </div>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation,class:"col-sm-2 control-label" %>
              <div class="col-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-star"></span></span>
                  <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control",required: true %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="actions col-sm-offset-2 col-sm-10">
                <%= f.submit "Sign up",class:"btn btn-primary" %>
                <button type="button" class="btn btn-success"><%= render "devise/shared/links" %></button>
              </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-md-2"></div>
</div>

