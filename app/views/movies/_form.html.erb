<!-- New Movie Fom -->

<div class="container">

<%= form_for @movie, :html => {:multipart => true} do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, 'error') %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well well-sm">
        <form class="form-horizontal" action="" method="post">
          <fieldset>
            <legend class="text-center">New Movie </legend>

            <!-- Title input-->
            <div class="form-group">
              <%= f.label :title, class:'col-md-3 control-label' %>
              <div class="col-md-9">
                <%= f.text_field :title, class:'form-control' %>
              </div>
            </div>
            <!-- Movie length-->
            <div class="form-group">
              <%= f.label :length, class:'col-md-3 control-label' %>
              <div class="col-md-9">
                <%= f.text_field :movie_length, class:'form-control' %>
              </div>
            </div>
            <!-- Rating input-->
            <div class="form-group">
              <%= f.label :rating, class:'col-md-3 control-label' %>
              <div class="col-md-9">
                <%= f.text_field :rating, class:'form-control' %>
              </div>
            </div>
              <!-- Video url input-->
              <div class="form-group">
                <%= f.label :video_url, class:'col-md-3 control-label' %>
                <div class="col-md-9">
                  <%= f.text_field :video_url, class:'form-control' %>
                </div>
              </div>
            <!-- Description input-->
            <div class="form-group">
              <%= f.label :description, class:'col-md-3 control-label' %>
              <div class="col-md-9">
                <%= f.text_area :description, class:'form-control' %>
              </div>
            </div><br><br>
            <!-- Image upload -->
                <div class="field">
                  <%= f.label :image %><br>
                  <%= f.file_field :image, class:'btn btn btn-default btn-xs ' %>
                </div>
            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 text-right">
                <%#= f.submit %>
                <%= f.submit 'Create Movie',class:"actions btn btn-lg btn-primary btn-block btn-signin" %>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>

<% end %>